<% /* views/edit-metric.ejs */ %>
<div class="card">
  <h2 style="margin-top:0;">Edit Metric â€” <%= project.name %></h2>

  <form method="post" action="/projects/<%= project.id %>/metrics/<%= metric.id %>/update">
    <div style="margin-bottom:.75rem;">
      <label>Name<br/>
        <input type="text" name="name" value="<%= metric.name %>" style="width:100%; padding:.5rem;"/>
      </label>
    </div>

    <div style="margin-bottom:.75rem;">
      <label>Unit (optional)<br/>
        <input type="text" name="unit" value="<%= metric.unit || '' %>" style="width:100%; padding:.5rem;"/>
      </label>
    </div>

    <div style="margin-bottom:1rem;">
      <label>Description (optional)<br/>
        <textarea name="description" rows="4" style="width:100%; padding:.5rem;"><%= metric.description || '' %></textarea>
      </label>
    </div>

    <div>
      <a href="/projects/<%= project.id %>" class="btn-outline">Cancel</a>
      <button type="submit" class="btn" style="margin-left:.5rem;">Save</button>
    </div>
  </form>
</div>
