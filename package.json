{
  "name": "product-os",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/server",
    "apps/client"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:server\" \"npm:dev:client\"",
    "dev:server": "npm run dev --workspace @product-os/server",
    "dev:client": "npm run dev --workspace @product-os/client",
    "build": "npm run build --workspace @product-os/client",
    "start": "npm run start --workspace @product-os/server",
    "test": "npm run test --workspace @product-os/server",
    "prisma:generate": "npm run prisma:generate --workspace @product-os/server",
    "prisma:migrate": "npm run prisma:migrate --workspace @product-os/server",
    "db:seed": "npm run db:seed --workspace @product-os/server",
    "worker:discovery": "npm run worker:discovery --workspace @product-os/server"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
